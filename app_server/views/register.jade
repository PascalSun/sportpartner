extends layout
block link
  link(rel='stylesheet', href='/stylesheets/login.css')
  link(rel='stylesheet', href='/stylesheets/index.css')
  script(src="/javascripts/register.js")
block content
  #home.intro
    .login.container
      form(name="register",method ='POST',action='/register',onsubmit="return registerSubmit()")
        fieldset
          legend Register your Sport Partner account
          br
          p Email:
          if(namerror)
            p(style="font-style:italic;font-size:15px;color:purple") #{namerror}
          - var email = "sunqiang93@163.com"
          input(type="email",name="username",value="#{email}" required)
          br
          br
          p Password:
          if(errors)
            p(style="font-style:italic;font-size:15px;color:purple") #{errors}
          - var password = "sunQIANG9337"
          input(type="password",name = "password",id="password",value = "#{password}" required)
          br
          br
          p Re-enter Passpord:
          input(type="password",name = "repassword", id="password2", value="#{password}" required)
          br
          br
          input(type="submit",value="Register")
          input(type="reset", value="Clear Form")
          br
